<div class="login-form" id="login-popup">

    <div class="box">
        <div class="box-header">
            <h1 class="title text-center">
                {{ 'login'|trans }}
            </h1>
            <button class="delete close-login-popup"></button>
        </div>

        <form id="js-login-form">
            <div class="field">
                <p class="control">
                    <input name="username" class="input" type="text" placeholder="{{ 'username'|trans }}">
                </p>
            </div>
            <div class="field">
                <p class="control">
                    <input name="password" class="input" type="password"  placeholder="{{ 'password'|trans }}">
                </p>
            </div>


            <p class="control btn-block">
                <button id="js-popup-login-button" class="button is-primary">{{ 'login_btn'|trans }}</button>
                <button class="button is-default close-login-popup" type="button">{{ 'cancel'|trans }}</button>
            </p>
        </form>
        <p class="has-text-centered">
            <a href="{{ path('fos_user_registration_register') }}">{{ 'register'|trans }}</a>
            |
            <a href="{{ path('fos_user_resetting_request') }}">{{ 'forgot_password'|trans }}</a>
        </p>
    </div>

</div>
<div class="login-fade" id="login-popup-fade"></div>